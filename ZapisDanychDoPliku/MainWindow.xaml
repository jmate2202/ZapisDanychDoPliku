<Window x:Class="ZapisDanychDoPliku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZapisDanychDoPliku"
        mc:Ignorable="d"
        Title="Kryminlani" Height="700" Width="800">
    <Grid>
        <Frame x:Name="Okno" Margin="0 0 0 100" ></Frame>
        <StackPanel VerticalAlignment="Bottom" 
                    Orientation="Horizontal">
            <Button Content="Uczniowie"              
                Height="80"
                Margin="10"
                Width="100"
                FontSize="20"
                Click="BT_ZmienWidokUczniowie"></Button>
            <Button Content="Osoby"                 
                Height="80"
                Margin="10"
                Width="100"
                FontSize="20"
                Click="BT_ZmienWidokOsoby"></Button>
            <Button Content="Prowadzenie lekcji"                 
                Height="80"
                Margin="10"
                Width="200"
                FontSize="20"
                Click="BT_ZmienWidokLekcja"></Button>
        </StackPanel>
     
    </Grid>    
</Window>
